<%= form_with model: @kitten do |form| %>
    <div>
        <%= form.label :name %><br>
        <%= form.text_field :name %>
    </div>

    <div>
        <%= form.label :age %><br>
        <%= form.text_field :age %>
    </div>

    <div>
        <%= form.label :cuteness %> / 10<br>
        <%= form.text_field :cuteness %>
    </div>

    <div>
        <%= form.label :softness %> / 10<br>
        <%= form.text_field :softness %>
    </div>

    <div>
        <%= form.submit %>
    </div>
<% end %>